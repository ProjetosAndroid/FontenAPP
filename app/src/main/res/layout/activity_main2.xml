<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:background="#22424B">

<TextView android:text="                                                                             Menu" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#F7F4F4"
    android:id="@+id/Menu2"
    android:textAppearance="@string/abc_action_bar_home_description" />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:startColor="#00008B"
    android:orientation="vertical"
    android:layout_below="@+id/Menu">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="runApp1"
            android:textColor="#F7F4F4"
            android:text=" Botoa1"
            android:backgroundTint="#42496B" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="runApp2"
            android:textColor="#F7F4F4"
            android:text="Botao2"
            android:backgroundTint="#7D8E8B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="runApp3"
            android:textColor="#F7F4F4"
            android:text="Botao3"
            android:backgroundTint="#7D8E8B"
            android:backgroundTintMode="src_over" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="runApp4"
            android:textColor="#F7F4F4"
            android:text="Botao4"
            android:backgroundTint="#7D8E8B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="runApp5"
            android:textColor="#F7F4F4"
            android:text="Botao5"
            android:backgroundTint="#7D8E8B" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="runApp6"
            android:textColor="#F7F4F4"
            android:text="Botao6"
            android:backgroundTint="#7D8E8B" />
    </LinearLayout>

</LinearLayout>

</RelativeLayout>